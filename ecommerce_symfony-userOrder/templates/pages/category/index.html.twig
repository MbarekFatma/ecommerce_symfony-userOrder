{% extends 'template.html.twig' %}





{% block body %}
	<!-- Page Header Start -->
	<div class="container-fluid bg-secondary mb-5">
		<div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 100px">
			<h1 class="font-weight-semi-bold text-uppercase mb-3">Details category</h1>
			<div class="d-inline-flex">
				<p class="m-0"><a href="">Home</a></p>
				<p class="m-0 px-2">-</p>
				<p class="m-0">Details category</p>
			</div>
		</div>
	</div>
	<!-- Page Header End -->
	<div class="container mt-4">

		<div class="container-fluid pt-8">
			<div>
				<a href="{{ path('category.new') }}" class="btn btn-primary">
					Add category
				</a>
			</div>

			<div class="container-fluid pt-5">
				<div class="row px-xl-8">
					<div class="col-lg-8 table-responsive mb-5">
						<table class="table table-bordered text-center mb-0">
							<thead class="bg-secondary text-dark">
							<tr>
								<th>Id</th>
								<th>logo</th>
								<th>Category name</th>
								<th>Localisation</th>
								<th>Status</th>
								<th>UpdatedAT</th>
								<th>CreatedAT</th>
								<th>Edit</th>
								<th>Delete</th>
							</tr>
							</thead>
							<tbody class="align-middle">


							{% for category in categorys %}
								<tr>
									<td class="align-middle">{{loop.index}}</td>
									<td>

										{% if category.image%}
											<img src="{{ absolute_url('uploads/'~category.image) }}"
												 width="70" height="70"
												 alt="{{ category.name }}" class="fluid my-2 rounded">
										{% else%}
											<img src="{{ absolute_url('uploads/pc.png') }}"
												 width="70" height="70"
												 alt="{{ category.name }}" class="fluid my-2 rounded">
										{% endif %}</td>

									</td>

									<td class="align-middle">{{ category.name }}</td>
									<td class="align-middle">{{ category.localisation}}</td>
									<td class="align-middle">
										<div class="nav-item dropdown">
											<a href="" class="nav-link dropdown-toggle" data-toggle="dropdown">{{category.status}}</a>
											<div class="dropdown-menu rounded-0 m-0">
												<a href="{{path('update_category_status',{id:category.id, status: 'Ouvert'})}}" class="dropdown-item">Ouvert</a>
												<a href="{{path('update_category_status',{id: category.id, status: 'Fermer'})}}" class="dropdown-item">Fermer</a>
											</div>
										</div>
									</td>
									<td>{{ category.updatedAt|date('d/m/Y') }}</td>
									<td>{{ category.createdAt|date('d/m/Y') }}</td>
									<td class="align-middle">
										<a href="{{ path('category.edit', { id: category.id }) }}" class="btn btn-sm btn-primary">
											<i class="fa fa-edit"></i>
										</a>
									</td>
									<td class="align-middle">
										<a href="{{ path('category.delete', { id: category.id }) }}" class="btn btn-sm btn-primary">
											<i class="fa fa-trash"></i>
										</a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="6" class="text-center">
										<h6 class="font-weight-medium">No category</h6>
									</td>
								</tr>
							{% endfor %}
							</tbody>
						</table>
					</div>

				</div>
			</div>

		</div>
	</div>

{% endblock %}